import interopRequireDefault from 'babel-runtime/helpers/interopRequireDefault';


function loadStories() {
    const context = require.context('../src/stories', true, /Story\.jsx$/);   // ì •ê·œí‘œí˜„ì‹ - Story.jsxë¡œ ëë‚˜ëŠ” íŒŒì¼
